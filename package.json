  "bugs": {
    "url": "https://github.com/fausantosdev/clean-node-api/issues"
  },
  "homepage": "https://github.com/fausantosdev/clean-node-api#readme",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "eslint": "^9.15.0",
    "git-commit-msg-linter": "^5.0.8",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "ts-jest": "^29.2.5",
